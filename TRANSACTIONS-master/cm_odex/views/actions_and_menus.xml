<openerp>
    <data>
        <template id="cm_odex.layout" inherit_id="web.layout" name="CM Layout">
            <xpath expr="//html/head/t" position="after">
                <link href="/cm_odex/static/src/css/style.css" rel="stylesheet"/>
            </xpath>
        </template>

        <menuitem id="cm_root_menu" name="Transactions Management" />


        <menuitem id="cm_main_menu" name="Transactions Management"
                  parent="cm_root_menu"  />

        <menuitem id="cm_settings_menu" name="Settings"
                  parent="cm_root_menu" groups="group_cm_manager"  />
        
        <!-- Grant Requests -->

        <record model="ir.actions.act_window" id="cm_transaction_out_list_action">
            <field name="name">Outgoing Transactions</field>
            <field name="res_model">cm.transaction.out</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first outgoing Transaction
                </p>
            </field>
        </record>
        
        <menuitem id="cm_transaction_out_menu" name="Outgoing Transactions"
                  parent="cm_main_menu" action="cm_transaction_out_list_action" />

        <!-- Incoming Transactions -->
        <record model="ir.actions.act_window" id="cm_transaction_in_list_action">
            <field name="name">Incoming Transactions</field>
            <field name="res_model">cm.transaction.in</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first Incoming Transaction
                </p>
            </field>
        </record>
        
        <menuitem id="cm_transaction_in_menu" name="Incoming Transactions"
                  parent="cm_main_menu" action="cm_transaction_in_list_action" />

        <!-- Internal Transactions -->

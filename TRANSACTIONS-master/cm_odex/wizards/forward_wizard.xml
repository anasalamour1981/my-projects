<openerp>
    <data>
        <record id="view_forward_wizard" model="ir.ui.view">
            <field name="name">CM - Forward Transaction</field>
            <field name="model">cm.forward.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group>
                            <field name="user_id" required="True"></field>
                        </group>
                        <group>
                            <field name="document_id" readonly="True"></field>
                        </group>
                    </group>
                    <footer>
                        <button string="Forward" type="object" name="run" class="oe_highlight"></button>
                         or 
                        <button special="cancel" string="Cancel" class="oe_link"></button>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_send_wizard" model="ir.ui.view">
            <field name="name">CM - Send Transaction</field>
            <field name="model">cm.send.out.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group>
                            <field name="user_id" readonly="True"></field>
                        </group>
                        <group>
                            <field name="document_id" readonly="True"></field>
                        </group>
                    </group>
                    <footer>
                        <button string="Send" type="object" name="run" class="oe_highlight"></button>
                         or 
                        <button special="cancel" string="Cancel" class="oe_link"></button>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_close_out_wizard" model="ir.ui.view">
            <field name="name">CM - Close Transaction</field>
            <field name="model">cm.close.out.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <group>
                            <field name="user_id" readonly="True"></field>
                        </group>
                        <group>
                            <field name="document_id" readonly="True"></field>
                        </group>
                    </group>
                    <footer>
                        <button string="Close Transaction" type="object" name="run" class="oe_highlight"></button>
                         or 
                        <button special="cancel" string="Cancel" class="oe_link"></button>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>

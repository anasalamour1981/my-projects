<openerp>
    <data>
        <record id="cm_transaction_out_tree" model="ir.ui.view">
            <field name="name">cm.transaction.out.tree</field>
            <field name="model">cm.transaction.out</field>
            <field name="arch" type="xml">
                <tree colors="#3333ee:state=='draft';#ee3333:state=='closed';#C38D19:state=='processed';" string="Transactions">
                    <field name="name"></field>
                    <field name="out_date"></field>
                    <field name="out_date_hijri"></field>
                    <field name="subject"></field>
                    <field name="state"></field>
                </tree>
            </field>
        </record>

        <record id="cm_transaction_out_form" model="ir.ui.view">
            <field name="name">cm.transaction.out.form</field>
            <field name="model">cm.transaction.out</field>
            <field name="arch" type="xml">
                <form string="Transaction">
                    <header>
                        <button type="object" name="launch_procedures" states="processed" string="Forward" class="oe_highlight"/>
                        <button states="draft" type="object" name="send" string="Send Transaction" groups="cm_odex.group_cm_manager" class="oe_highlight"/>
                        <button states="processed" type="object" name="close" string="Close Transaction" groups="cm_odex.group_cm_manager" class="oe_highlight"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,processed,closed"  />
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label class="oe_edit_only" string="Transaction Number" attrs="{'invisible': True}"/>
                                <field placeholder="" attrs="{'required':True}" name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group >
                            <group>
                                <field name="type"></field>
                                <field name="subject" required="True"></field>
                                <field name="to_ids" widget="many2many_tags" required="True" domain="[('type', 'in', ['external'])]"></field>
                                <field name="important_id" widget="selection"></field>
                            </group>
                            <group>
                                <field name="out_date"></field>
                                <field name="out_date_hijri"></field>
                                <field name="cc_ids" widget="many2many_tags" domain="[('type', 'in', ['employee', 'unit'])]"></field>
                                <field name="subject_type_id" widget="selection" required="True"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="❶">
                                
                                <group>
                                    <group>
                                        
                                        <field name="preparation_id" domain="[('type', 'in', ['unit'])]"></field>
                                        <field name="procedure_id"></field>
                                        <field name="incoming_id" attrs="{'required':[('type','in',['reply'])],'invisible':[('type','not in',['reply'])]}"></field>
                                    </group>
                                    <group>
                                        <field name="dispatch_id" widget="selection"></field>
                                        <field name="confidential_level_id" widget="selection"></field>
                                        <field name="attachment_num" required="True"></field>
                                    </group>
                                </group>
                            </page>
                            <page string="Information">
                                
                                <group>
                                    <group>
                                        
                                        <field name="employee_id" readonly="True"></field>
                                        <field name="user_id" invisible="True"></field>
                                    </group>
                                    <group>
                                        <field name="entity_id" readonly="True"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>
